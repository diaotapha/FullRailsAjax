<% if !@produit.errors.any? %>

    $("#blocs_produits").prepend(" <%= raw escape_javascript render('produits/add_new', produit: @produit )%> ");

    $("#form_new_produit").find('.form-control').val("");

    $("#nb_produit_<%= @produit.panier.id %>").text("<%= @produit.panier.produits.count %>");

    $("#nb_produit_total").text( parseInt( $("#nb_produit_total").text()  ) + 1  );

    $('body').removeClass("modal-open");
    $(".modal-backdrop").remove();
    $(".backdrop_spinner").remove();
    $(".loader_taph").remove();


    swal({
    toast: true,
    position: 'center',
    background: '#28a745',
    showConfirmButton: false,
    timer: 3000,
    type: 'success',
    title: "Produit créé avec succès."
    });

<% else %>

    swal({
        toast: true,
        position: 'center',
        background: '#28a745',
        showConfirmButton: false,
        timer: 3000,
        type: 'error',
        title: "Erreur lors de la création."
    });

<% end %>


